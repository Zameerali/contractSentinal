{
    "manifest_version": 3,
    "name": "ContractSentinel",
    "version": "1.0.0",
    "description": "Scan smart contracts for honeypot traps and rug pulls directly from your browser",
    "permissions": [
        "activeTab",
        "storage",
        "tabs",
        "contextMenus"
    ],
    "host_permissions": [
        "http://localhost:3001/*"
    ],
    "icons": {
        "16": "icons/icon.svg",
        "48": "icons/icon.svg",
        "128": "icons/icon.svg"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icons/icon.svg"
    },
    "content_scripts": [
        {
            "matches": [
                "https://etherscan.io/*",
                "https://*.etherscan.io/*",
                "https://polygonscan.com/*",
                "https://*.polygonscan.com/*",
                "https://arbiscan.io/*",
                "https://*.arbiscan.io/*",
                "https://optimistic.etherscan.io/*",
                "https://bscscan.com/*",
                "https://*.bscscan.com/*",
                "https://app.uniswap.org/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "content.css"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js"
    }
}